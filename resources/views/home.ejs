<section class="menu container mx-auto py-14 px-10">
    <h1 class="text-xl font-bold mb-8">All Cuisines</h1>
    <div class="grid grid-cols-4 gap-x-12 gap-y-16">
        <% pizzas.forEach(function(pizza){ %>
            <div class="w-64">
                <img class="h-40 mb-4 mx-auto" src="/img/<%=pizza.image %>" alt="Pizza">
                <div class="text-center">
                    <h2 class="mb-4 text-lg">
                        <%=pizza.name%>
                    </h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs">
                        <%=pizza.size%>
                    </span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">
                            â‚¹<%=pizza.price%>
                        </span>
                        <button data-pizza="<%= JSON.stringify(pizza) %>"
                            class="add-to-cart py-1 px-6 rounded-full flex items-center text-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
            </div>
            <% })%>


    </div>
</section>